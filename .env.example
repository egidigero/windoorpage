# SMTP configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
# Set to 'true' if using implicit TLS (port 465). Leave false/blank for STARTTLS (587)
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
FROM_EMAIL=reservas@windoor.com.ar
NOTIFY_EMAIL=info@windoor.com.ar
# Optional base URL
BASE_URL=https://windoor.com.ar

# Anti-spam (honeypot) â€“ name of hidden field expected to stay empty
HONEYPOT_FIELD=website
NEXT_PUBLIC_HONEYPOT_FIELD=website

# Rate limiting (per IP) for lead submissions
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW_MS=60000

# Optional: use Resend API instead of SMTP (preferred in Vercel)
RESEND_API_KEY=your_resend_api_key
# Skip SMTP verify step if true (useful when provider blocks verify)
SMTP_SKIP_VERIFY=false
